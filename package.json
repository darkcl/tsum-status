{
  "name": "tsum-status",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "postinstall": "tsc -p .",
    "watch": "tsc -w -p .",
    "debug":
      "nodemon --watch ./dist --inspect=0.0.0.0:5858 --nolazy ./dist/index.js",
    "docker-debug": "docker-compose up",
    "test": "nyc mocha",
    "watch-test": "nodemon -e ts --watch ./app ./test --exec 'npm test'",
    "start": "node ./dist/index.js"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "typescript": "^2.8.3"
  },
  "devDependencies": {
    "@types/chai": "^4.1.3",
    "@types/mocha": "^5.2.0",
    "chai": "^4.1.2",
    "mocha": "^5.1.1",
    "nodemon": "^1.17.4",
    "nyc": "^11.7.1",
    "ts-node": "^6.0.2"
  },
  "nyc": {
    "include": ["./app/**.*"],
    "extension": [".ts", ".tsx"],
    "require": ["ts-node/register"],
    "reporter": ["text-summary", "html", "lcov"],
    "sourceMap": true,
    "instrument": true,
    "all": true
  }
}
